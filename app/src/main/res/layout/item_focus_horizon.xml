<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_focus_horizon_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:text="他们也在用头条"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_focus_horizon_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/focus_delete" />
    </LinearLayout>

    <com.sziti.counterfeittopnews.widget.HorizonRecyclerView
        android:id="@+id/item_focus_horizon_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>
</LinearLayout>