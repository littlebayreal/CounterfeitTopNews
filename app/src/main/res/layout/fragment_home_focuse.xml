<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sziti.counterfeittopnews.widget.pullableview.PullToRefreshLayout
        android:id="@+id/fragment_home_focuse"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/refresh_head" />

        <com.sziti.counterfeittopnews.widget.pullableview.PullableRecyclerView
            android:id="@+id/fragment_home_focuse_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include layout="@layout/load_more" />
    </com.sziti.counterfeittopnews.widget.pullableview.PullToRefreshLayout>
</LinearLayout>